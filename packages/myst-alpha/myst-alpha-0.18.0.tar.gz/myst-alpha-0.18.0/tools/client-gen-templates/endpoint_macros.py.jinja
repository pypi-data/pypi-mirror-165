{% if endpoint.json_body %}
json_body: {{ endpoint.json_body.get_type_string() }},
{% endif %}
{# query parameters #}
{% for parameter in endpoint.query_parameters.values() %}
{{ property_to_string(parameter) }},
{% endfor %}
{% for parameter in endpoint.header_parameters.values() %}
{{ property_to_string(parameter) }},
