{
  "cards": [
    {
      "header": {
        "title": "New version of {package} detected"
      },
      "sections": [
        {
          "widgets": [
            {
              "keyValue": {
                "topLabel": "Repository",
                "content": "{repository} / Branch {branch}"
              }
            },
            {
              "keyValue": {
                "topLabel": "Current Package Version",
                "content": "{old_version}"
              }
            },
            {
              "keyValue": {
                "topLabel": "Current Upstream Version",
                "content": "{new_version}"
              }
            },
            {
              "buttons": [
                {
                  "textButton": {
                    "text": "{package} website",
                    "onClick": {
                      "openLink": {
                        "url": "{homepage}"
                      }
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
